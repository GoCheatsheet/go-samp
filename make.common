GC = $(GOGC)
LD = $(GOLD)

ifndef TARG
TARG = main
endif

here = $(shell pwd)
bottom = $(shell basename $(here))

O_FILES= $(XO_FILES) \
	$(bottom).8

all:
	make $(TARG)

$(TARG): $(O_FILES)
	$(LD) -o $@ $(O_FILES)
	@echo "Done. Executable is: $@"

$(O_FILES): %.8: %.go
	$(GC) -c $<

clean:
	rm -rf *.[$(OS)o] *.a [$(OS)].out _obj $(TARG) *.8

